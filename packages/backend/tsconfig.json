{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@types/*": [
        "../../types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "../../types/**/*",
    "jest.setup.ts",
    "tests/entities.test.ts",
    "tests/testApi.ts",
    "tests/testHelper.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}